# Mon Toit Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Mapbox Configuration (REQUIRED for maps)
VITE_MAPBOX_PUBLIC_TOKEN=your_mapbox_public_token

# Authentication Settings
VITE_ENABLE_SOCIAL_AUTH=false

# Email Service (Optional - Resend)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=no-reply@yourdomain.com
RESEND_DOMAIN=yourdomain.com

# SMS Service (Optional - Brevo)
BREVO_API_KEY=your_brevo_api_key

# Payment Integration (Optional - IN TOUCH)
INTOUCH_PARTNER_ID=your_partner_id
INTOUCH_LOGIN_API=your_login_api
INTOUCH_PASSWORD_API=your_password_api
INTOUCH_USERNAME=your_username
INTOUCH_PASSWORD=your_password
INTOUCH_BASE_URL=https://apidist.gutouch.net

VITE_INTOUCH_BASE_URL=https://apidist.gutouch.net
VITE_INTOUCH_USERNAME=your_username
VITE_INTOUCH_PASSWORD=your_password
VITE_INTOUCH_PARTNER_ID=your_partner_id
VITE_INTOUCH_LOGIN_API=your_login_api
VITE_INTOUCH_PASSWORD_API=your_password_api

# Azure AI Services (Optional - for chatbot and AI features)
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=your_azure_endpoint
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-10-21

VITE_AZURE_OPENAI_API_KEY=your_azure_openai_key
VITE_AZURE_OPENAI_ENDPOINT=your_azure_endpoint
VITE_AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
VITE_AZURE_OPENAI_API_VERSION=2024-10-21
VITE_AZURE_AI_SERVICES_API_KEY=your_azure_ai_services_key
VITE_AZURE_AI_SERVICES_ENDPOINT=your_azure_services_endpoint

# Facial Verification (Optional - Smileless/NeoFace)
SMILELESS_TOKEN=your_smileless_token
SMILELESS_API_BASE=https://neoface.aineo.ai/api

# Additional LLM Providers (Optional)
GEMINI_API_KEY=your_gemini_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# Electronic Signature (Optional - CryptoNeo)
CRYPTONEO_APP_KEY=your_app_key
CRYPTONEO_APP_SECRET=your_app_secret
CRYPTONEO_BASE_URL=your_cryptoneo_url

# Identity Verification (Optional - Smile ID)
SMILE_ID_PARTNER_ID=your_partner_id
SMILE_ID_API_KEY=your_api_key
SMILE_ID_ENVIRONMENT=sandbox
